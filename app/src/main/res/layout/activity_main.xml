<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_main"
    tools:context=".view.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Better Subway"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/bm_dohyeon_ttf"
            android:textColor="@color/white"
            />
    </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/main_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_subway"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_image"
            android:orientation="vertical"
            android:gravity="top"
            >
            <Button
                android:id="@+id/sign_up_page_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/appMainColor"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:textSize="18dp"
                android:background="@drawable/form_button"
             />
            <Button
                android:id="@+id/sign_in_page_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/appMainColor"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:textSize="18dp"
                android:background="@drawable/form_button"
                />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>