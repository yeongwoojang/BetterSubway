<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slidingView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoDragView="@id/dragView"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp"
    app:umanoShadowHeight="0dp"
    tools:context=".view.TimeTableActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/style_main">

            <ImageButton
                android:id="@+id/menu_bt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_previous" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:text="지하철 도착시간"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/green400"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/icon_left_arrow" />

                <TextView
                    android:id="@+id/left_direction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="신림"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/station_name"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:background="@drawable/form_station_box"
                    android:gravity="center"
                    android:text="서울대입구"
                    android:textColor="@color/green400" />

                <TextView
                    android:id="@+id/right_direction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="end|center_vertical"
                    android:text="서울대입구"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/icon_right_arrow_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/left_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/gray400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/right_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/style_main"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/transparent"
            android:fontFamily="@font/bm_dohyeon_ttf"
            android:gravity="center"
            android:text="좌석보기"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/one_and_one_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/form_button"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:text="1-1"
                android:textColor="@color/appMainColor" />

            <Button
                android:id="@+id/one_and_two_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/form_button"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:text="1-2"
                android:textColor="@color/appMainColor" />

            <Button
                android:id="@+id/one_and_three_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/form_button"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:text="1-3"
                android:textColor="@color/appMainColor" />

            <Button
                android:id="@+id/one_and_four_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form_button"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:text="1-4"
                android:textColor="@color/appMainColor" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/white"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        >
                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_seat" />

                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_seat" />

                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_seat" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="일\n반\n석"
                        android:gravity="center_vertical|center_horizontal"
                        android:fontFamily="@font/bm_dohyeon_ttf"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray400"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        >
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/gray400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        >
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="일\n반\n석"
                        android:gravity="center_vertical|center_horizontal"
                        android:fontFamily="@font/bm_dohyeon_ttf"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray400"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_weight="2"
                        >
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />

                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_seat" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>